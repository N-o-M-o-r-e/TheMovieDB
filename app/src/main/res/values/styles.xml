        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Inter_Regular">
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Inter_SemiBold">
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="Inter_Medium">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Inter_Thin">
        <item name="fontFamily">@font/inter_thin</item>
    </style>

    <style name="Inter_Bold_32sp" parent="Inter_Bold">
